{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [
            "./app",
            "./composants",
            "./lib"
        ],
        "includePattern": ".ts$",
        "excludePattern": "(node_modules/|coverage/)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "destination": "./docs/",
        "recurse": true
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    }
}